<% provide(:title, 'New Group') %>
<h1>New Group</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@group) do |f| %>
    <%= render 'error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      
      <%= f.submit "Create my group", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>