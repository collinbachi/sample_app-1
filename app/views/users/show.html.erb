
<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<div id="calendar">
  <%= calendar_for(@users) do |t| %>
  <%= t.head('mon', 'tue', 'wed', 'thu', 'fri', 'sat', 'sun') %>
  <%= t.day do |day, users| %>
    <%= day.day %>
    <% users.each do |user| %>
      <%= h(user.name) %>
    <% end %>
  <% end %>
<% end %>


</div>